{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2015",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}
